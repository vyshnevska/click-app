%h1= @title
%form{action:"/create", id:"ad", method: :post, enctype:"multipart/form-data"}
  .form-group
    %label= 'Title:'
    %input.form-control{id:"title", name: "ad[title]", type:"text"}
  .form-group
    %label= 'Width:'
    %input.form-control{id:"width", name: "ad[width]", type:"text"}
  .form-group
    %label= 'Height:'
    %input.form-control{id:"height", name: "ad[height]", type:"text"}
  .form-group
    %label= 'Filename:'
    %input.form-control{id:"filename", name: "ad[filename]", type:"text"}
  .form-group
    %label= 'URL:'
    %input.form-control{id:"url", name: "ad[url]", type:"text"}
  .form-group
    %label= 'Content:'
    %input.form-control{id:"content", name: "ad[content]", type:"text"}
  .form-group
    %label= 'Image File:'
    %input.form-control{id:"image", name: "image", type:"file"}
  %button{type:"submit", class: "btn btn-default"}= 'Submit'
