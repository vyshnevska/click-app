                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="/list"> Ads List </a>
                    </li>
                    <li>
                        <a href="/new"> New Ad </a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1><%= @page_header %></h1>
                <%= yield %>
            </div>
        </div>
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <div id="debug">
                      <p>Current time is <%= Time.now.strftime("%I:%M:%S %p") %>.</p>
